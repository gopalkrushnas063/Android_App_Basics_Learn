<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnChild1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D3CCCC"
        android:text="Child 1"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btnChild2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D3CCCC"
        android:text="Child 2"
        android:layout_above="@+id/btnChild1"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D3CCCC"
        android:text="Child 6"
        android:layout_toLeftOf="@+id/btnChild2"
        android:layout_above="@+id/btnChild4"
        android:layout_center="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D3CCCC"
        android:text="Child 7"
        android:layout_toRightOf="@+id/btnChild2"
        android:layout_above="@+id/btnChild5"
        android:layout_center="true"/>

    <Button
        android:id="@+id/btnChild3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D3CCCC"
        android:text="Child 3"
        android:layout_below="@+id/btnChild1"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D3CCCC"
        android:text="Child8"
        android:layout_toLeftOf="@+id/btnChild3"
        android:layout_below="@+id/btnChild4"
        android:layout_center="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D3CCCC"
        android:text="Child 9"
        android:layout_toRightOf="@+id/btnChild3"
        android:layout_below="@+id/btnChild4"
        android:layout_center="true"/>

    <Button
        android:id="@+id/btnChild4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D3CCCC"
        android:text="Child 4"
        android:layout_toLeftOf="@+id/btnChild1"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/btnChild5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#D3CCCC"
        android:text="Child 5"
        android:layout_toRightOf="@+id/btnChild1"
        android:layout_centerVertical="true"/>
</RelativeLayout>